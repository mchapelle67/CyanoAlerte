{% set toxicityLevel = level|default(0) %}
{% set toxicityLabel = toxicityLevel == 3 ? 'Niveau élevé' : (toxicityLevel == 2 ? 'Niveau moyen' : (toxicityLevel == 1 ? 'Niveau faible' : 'Non défini')) %}
{% set toxicityClass = toxicityLevel == 3 ? 'bg-red-100 text-red-700 border-red-200' : (toxicityLevel == 2 ? 'bg-orange-100 text-orange-700 border-orange-200' : (toxicityLevel == 1 ? 'bg-green-100 text-green-700 border-green-200' : 'bg-slate-100 text-slate-600 border-slate-200')) %}

<span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-semibold border {{ extraClass|default('') }} {{ toxicityClass }}">{{ toxicityLabel }}</span>
