<article class="w-[23em] h-[11em] p-6 bg-white rounded-2xl shadow-lg border border-gray-100 card-hover flex justify-between">
    <div>
        <div class="mb-6 {{ color }}">{{ icon|raw }}</div>
        <h3 class="custom-h3 font-medium mb-1 text-gray-800">{{ title }}</h3>
        <p class="text-sm text-gray-500">{{ subtitle }}</p>
    </div>
    <p class="text-4xl {{ color }} leading-none">{{ number }}</p>
</article>