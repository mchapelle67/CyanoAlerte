<div class="custom-padding">
    <div class="bg-white/90 border border-gray-200 rounded-2xl shadow-sm p-12 sm:p-5">
        <form class="w-full mx-auto mb-4">
            <label for="search" class="sr-only">Rechercher une alerte</label>
            <div class="relative">
                <div class="absolute inset-y-0 left-4 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/></svg>
                </div>
                <input type="search" id="search" class="bg-gray-50 block w-full rounded-xl border border-gray-200 py-3 pl-12 pr-4 text-gray-800 placeholder:text-gray-500 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-300/70 focus:border-blue-300" placeholder="Rechercher par ville, département ou plan d'eau" required />
            </div>
        </form>
        <div class="flex flex-col sm:flex-row gap-3">
            <div class="w-full">
                <label for="toxicity" class="block mb-2 text-gray-700">Niveau de toxicité</label>
                <select id="toxicity" class="w-full p-2.5 rounded-lg border border-gray-200 bg-gray-50 text-gray-800 focus:border-blue-300 focus:ring-2 focus:ring-blue-300/50 focus:outline-none">
                    <option value="">Niveau 1</option>
                </select>
            </div>
            <div class="w-full">
                <label for="department" class="block mb-2 text-gray-700">Département</label>
                <select id="department" class="w-full p-2.5 rounded-lg border border-gray-200 bg-gray-50 text-gray-800 focus:border-blue-300 focus:ring-2 focus:ring-blue-300/50 focus:outline-none">
                    <option value="">Alsace</option>
                </select>
            </div>
            <div class="w-full mb-4">
                <label for="period" class="block mb-2 text-gray-700">Période</label>
                <select id="period" class="w-full p-2.5 rounded-lg border border-gray-200 bg-gray-50 text-gray-800 focus:border-blue-300 focus:ring-2 focus:ring-blue-300/50 focus:outline-none">
                    <option value="">24h</option>
                </select>
            </div>
        </div>
        <span class="text-gray-500">alertes trouvées</span>
    </div>
</div>
