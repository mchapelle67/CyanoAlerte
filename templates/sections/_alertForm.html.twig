<!-- Main modal -->
<div id="crud-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-sm">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-5 md:p-5 border-b rounded-t">
                <div class="flex flex-col">
                {{ form_start(alert_form) }}
                    <h3 class="flex items-center gap-2 text-2xl mb-1 font-medium text-green-800 mt-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" class="w-7 h-7"><!--!Font Awesome Free v7.1.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path fill="#166534" d="M128 252.6C128 148.4 214 64 320 64C426 64 512 148.4 512 252.6C512 371.9 391.8 514.9 341.6 569.4C329.8 582.2 310.1 582.2 298.3 569.4C248.1 514.9 127.9 371.9 127.9 252.6zM320 320C355.3 320 384 291.3 384 256C384 220.7 355.3 192 320 192C284.7 192 256 220.7 256 256C256 291.3 284.7 320 320 320z"/></svg>                
                        Nouvelle alerte 
                    </h3>
                    <span class="text-gray-500 text-base">
                        Position:
                        <span id="position-display"></span>
                        <span id="custom-text">{{ texte_personnalise|default('non renseigné') }}</span>
                        {{ form_row(alert_form.waterbody.longitude) }}
                        {{ form_row(alert_form.waterbody.latitude) }}
                    </span>
                </div>
                <button type="button" id="close-modal-btn" data-modal-hide="crud-modal" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Annuler</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="py-6 px-6">
                <div class="flex gap-4 mb-4">
                    <div class="flex-1 flex flex-col">
                        {{ form_label(alert_form.waterbody.name, null, {'label_attr': {'class': 'font-medium mb-2'}}) }}
                        {{ form_widget(alert_form.waterbody.name, {'attr': {'class': 'bg-gray-50 w-full p-2 rounded border border-gray-300 focus:border-blue-300 focus:ring focus:ring-blue-200 placeholder-gray-400'}}) }}
                        {{ form_errors(alert_form.waterbody.name) }}
                    </div>
                    <div class="flex-1 flex flex-col">
                        {{ form_label(alert_form.waterbody.type, null, {'label_attr': {'class': 'font-medium mb-2'}}) }}
                        {{ form_widget(alert_form.waterbody.type, {'attr': {'class': 'bg-gray-50 w-full p-2 rounded border border-gray-300 focus:border-blue-300 focus:ring focus:ring-blue-200 placeholder-gray-400'}}) }}
                        {{ form_errors(alert_form.waterbody.type) }}
                    </div>
                </div>
                <div class="mb-4 flex flex-col">
                    <label class="font-medium mb-2">Localisation *</label>
                    <input type="text" class="bg-gray-50 w-full p-2 rounded border border-gray-300 focus:border-blue-300 focus:ring focus:ring-blue-200 placeholder-gray-400" name="zone" id="citySearchInput" placeholder="ex: Paris">                    
                        <ul id="cityResults" class="mt-2"></ul>

                    {{ form_row(alert_form.waterbody.city) }}
                    {{ form_row(alert_form.waterbody.department) }}
                </div>
                <div class="mb-4 flex flex-col">
                    {{ form_label(alert_form.toxicity_level, null, {'label_attr': {'class': 'font-medium mb-2'}}) }}
                    {{ form_widget(alert_form.toxicity_level, {'attr': {'class': 'bg-gray-50 w-full p-2 rounded border border-gray-300 focus:border-blue-300 focus:ring focus:ring-blue-200 placeholder-gray-400'}}) }}
                    {{ form_errors(alert_form.toxicity_level) }}
                </div>
                <div class="mb-4 flex flex-col">
                    {{ form_label(alert_form.description, null, {'label_attr': {'class': 'font-medium mb-2'}}) }}
                    {{ form_widget(alert_form.description, {'attr': {'class': 'bg-gray-50 w-full p-2 rounded border border-gray-300 focus:border-blue-300 focus:ring focus:ring-blue-200 placeholder-gray-400'}}) }}
                    {{ form_errors(alert_form.description) }}
                </div>                 
                <div class="mb-4 flex flex-col">
                    {{ form_label(alert_form.photos, null, {'label_attr': {'class': 'font-medium mb-2'}}) }}
                    <div class="flex items-center gap-3">
                        <label for="{{ alert_form.photos.vars.id }}" class="px-5 py-2.5 bg-custom-gradient btn-hover-effect text-white font-medium rounded-lg  cursor-pointer flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                            </svg>
                            Choisir des photos
                        </label>
                        <span id="file-chosen" class="text-sm text-gray-600 italic">Aucun fichier sélectionné</span>
                    </div> 
                    <div class="hidden">
                        {{ form_widget(alert_form.photos, {'attr': {'onchange': 'updateFileName(this)'}}) }}
                    </div>       
                    <p class="mt-2 text-xs text-gray-500">PNG, JPG, JPEG, GIF, WEBP (Max. 10MB par fichier)</p>
                    {{ form_errors(alert_form.photos) }}
                </div>
                <div class="mb-4 flex flex-col">
                    {{ form_label(alert_form.email, null, {'label_attr': {'class': 'font-medium mb-2'}}) }}
                    {{ form_widget(alert_form.email, {'attr': {'class': 'bg-gray-50 w-full p-2 rounded border border-gray-300 focus:border-blue-300 focus:ring focus:ring-blue-200 placeholder-gray-400'}}) }}
                    {{ form_errors(alert_form.email) }}
                </div>         
                <div class="flex items-center justify-around">
                    {{ form_row(alert_form.submit, {'attr': {'class':'btn-hover-effect text-white bg-custom-gradient font-medium rounded-lg text-xl px-9 py-2 w-fit text-center mt-2' }}) }}
                </div>
            </div>
        {{ form_end(alert_form) }}
            <div class="bg-yellow-50 p-5 w-[80%] rounded border border-amber-200 mx-auto">
                <span class="font-medium pb-2 block text-amber-800">⚠️ Important:<br></span>
                <ul class="list-disc pl-7  text-amber-700">
                    <li>Évitez tout contact avec l'eau suspecte</li>
                    <li>Tenez vos animaux éloignés de la zone</li>
                    <li>Contactez les autorités locales si nécessaire</li>
                </ul>
            </div>
            <div class="pb-6"></div>
        </div>
    </div>
</div>

